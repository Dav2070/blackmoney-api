generator client {
  provider = "prisma-client"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
}

model Company {
  id              BigInt       @id @default(autoincrement())
  uuid            String       @unique @default(uuid())
  userId          BigInt
  name            String       @db.VarChar
  stripeAccountId String       @unique @db.VarChar
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @default(now()) @updatedAt
  restaurants     Restaurant[]
  users           User[]
}

model Restaurant {
  id                   BigInt                @id @default(autoincrement())
  uuid                 String                @unique @default(uuid())
  companyId            BigInt
  name                 String                @db.VarChar
  createdAt            DateTime              @default(now())
  updatedAt            DateTime              @default(now()) @updatedAt
  mail                 String?               @db.VarChar
  owner                String?               @db.VarChar
  phoneNumber          String?               @db.VarChar
  taxNumber            String?               @db.VarChar
  address              Address?
  bills                Bill[]
  menus                Menu[]
  printers             Printer[]
  registers            Register[]
  company              Company               @relation(fields: [companyId], references: [id])
  rooms                Room[]
  userToRestaurants    UserToRestaurant[]
  users                User[]                @relation("UserToRestaurant")
  openingTimes         OpeningTime[]
  specialOpeningTimes  SpecialOpeningTime[]
}

model Register {
  id              BigInt           @id @default(autoincrement())
  uuid            String           @unique @default(uuid())
  name            String           @db.VarChar
  adminPin        String?          @db.VarChar
  restaurantId    BigInt
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @default(now()) @updatedAt
  restaurant      Restaurant       @relation(fields: [restaurantId], references: [id])
  registerClients RegisterClient[]
}

model RegisterClient {
  id           BigInt      @id @default(autoincrement())
  uuid         String      @unique @default(uuid())
  name         String?     @db.VarChar
  serialNumber String      @db.VarChar
  registerId   BigInt
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @default(now()) @updatedAt
  bills        Bill[]
  printRules   PrintRule[]
  register     Register    @relation(fields: [registerId], references: [id], onDelete: Cascade)
  sessions     Session[]

  @@unique([registerId, serialNumber])
}

model Printer {
  id           BigInt      @id @default(autoincrement())
  uuid         String      @unique @default(uuid())
  name         String      @db.VarChar
  ipAddress    String      @db.VarChar
  restaurantId BigInt
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @default(now()) @updatedAt
  restaurant   Restaurant  @relation(fields: [restaurantId], references: [id])
  printRules   PrintRule[] @relation("PrintRuleToPrinter")
}

model PrintRule {
  id               BigInt         @id @default(autoincrement())
  uuid             String         @unique @default(uuid())
  type             PrintRuleType  @default(PRODUCT_TYPE)
  registerClientId BigInt
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @default(now()) @updatedAt
  productType      ProductType?
  registerClient   RegisterClient @relation(fields: [registerClientId], references: [id], onDelete: Cascade)
  categories       Category[]     @relation("CategoryToPrintRule")
  printers         Printer[]      @relation("PrintRuleToPrinter")
  products         Product[]      @relation("PrintRuleToProduct")
}

model User {
  id                BigInt             @id @default(autoincrement())
  uuid              String             @unique @default(uuid())
  name              String             @db.VarChar
  password          String?            @db.VarChar
  role              UserRole           @default(USER)
  companyId         BigInt
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @default(now()) @updatedAt
  orders            Order[]
  sessions          Session[]
  company           Company            @relation(fields: [companyId], references: [id])
  userToRestaurants UserToRestaurant[]
  restaurants       Restaurant[]       @relation("UserToRestaurant")
}

model UserToRestaurant {
  id           BigInt     @id @default(autoincrement())
  userId       BigInt
  restaurantId BigInt
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @default(now()) @updatedAt
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id])
  user         User       @relation(fields: [userId], references: [id])
}

model Session {
  id               BigInt         @id @default(autoincrement())
  uuid             String         @unique @default(uuid())
  userId           BigInt
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @default(now()) @updatedAt
  lastActive       DateTime       @default(now())
  registerClientId BigInt
  registerClient   RegisterClient @relation(fields: [registerClientId], references: [id], onDelete: Cascade)
  user             User           @relation(fields: [userId], references: [id])
}

model Room {
  id           BigInt      @id @default(autoincrement())
  uuid         String      @unique @default(uuid())
  name         String      @db.VarChar
  userId       BigInt?
  restaurantId BigInt?
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @default(now()) @updatedAt
  restaurant   Restaurant? @relation(fields: [restaurantId], references: [id])
  tables       Table[]
}

model Table {
  id           BigInt        @id @default(autoincrement())
  uuid         String        @unique @default(uuid())
  name         Int           @default(1)
  roomId       BigInt
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @default(now()) @updatedAt
  seats        Int           @default(2)
  orders       Order[]
  reservations Reservation[]
  room         Room          @relation(fields: [roomId], references: [id], onDelete: Cascade)
}

model Menu {
  id           BigInt      @id @default(autoincrement())
  uuid         String      @unique @default(uuid())
  restaurantId BigInt
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @default(now()) @updatedAt
  categories   Category[]
  restaurant   Restaurant  @relation(fields: [restaurantId], references: [id])
  offers       Offer[]
  variations   Variation[]
}

model Bill {
  id               BigInt          @id @default(autoincrement())
  uuid             String          @unique @default(uuid())
  registerClientId BigInt?
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @default(now()) @updatedAt
  restaurantId     BigInt
  registerClient   RegisterClient? @relation(fields: [registerClientId], references: [id])
  restaurant       Restaurant      @relation(fields: [restaurantId], references: [id])
  orders           Order[]
}

model Address {
  id           BigInt     @id @default(autoincrement())
  uuid         String     @unique @default(uuid())
  restaurantId BigInt     @unique
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @default(now()) @updatedAt
  city         String?    @db.VarChar
  country      Country?
  postalCode   String?    @db.VarChar
  houseNumber  String?    @db.VarChar
  line1        String?    @db.VarChar
  line2        String?    @db.VarChar
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id])
}

model Order {
  id            BigInt         @id @default(autoincrement())
  uuid          String         @unique @default(uuid())
  paidAt        DateTime?
  paymentMethod PaymentMethod?
  tableId       BigInt?
  userId        BigInt?
  billId        BigInt?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @default(now()) @updatedAt
  bill          Bill?          @relation(fields: [billId], references: [id])
  table         Table?         @relation(fields: [tableId], references: [id])
  user          User?          @relation(fields: [userId], references: [id])
  orderItems    OrderItem[]
}

model OrderItem {
  id                  BigInt               @id @default(autoincrement())
  uuid                String               @unique @default(uuid())
  count               Int                  @default(1)
  orderId             BigInt
  productId           BigInt?
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @default(now()) @updatedAt
  discount            Int                  @default(0)
  offerId             BigInt?
  notes               String?              @db.VarChar
  orderItemId         BigInt?
  type                OrderItemType        @default(PRODUCT)
  course              Int?
  takeAway            Boolean              @default(false)
  diversePrice        Int?
  offer               Offer?               @relation(fields: [offerId], references: [id])
  order               Order                @relation(fields: [orderId], references: [id], onDelete: Cascade)
  orderItem           OrderItem?           @relation("OrderItemToOrderItem", fields: [orderItemId], references: [id])
  orderItems          OrderItem[]          @relation("OrderItemToOrderItem")
  product             Product?             @relation(fields: [productId], references: [id], onDelete: Cascade)
  orderItemVariations OrderItemVariation[]
}

model OrderItemVariation {
  id                                 BigInt                              @id @default(autoincrement())
  uuid                               String                              @unique @default(uuid())
  count                              Int                                 @default(1)
  orderItemId                        BigInt
  createdAt                          DateTime                            @default(now())
  updatedAt                          DateTime                            @default(now()) @updatedAt
  orderItem                          OrderItem                           @relation(fields: [orderItemId], references: [id], onDelete: Cascade)
  orderItemVariationToVariationItems OrderItemVariationToVariationItem[]
}

model OrderItemVariationToVariationItem {
  id                   BigInt             @id @default(autoincrement())
  orderItemVariationId BigInt
  variationItemId      BigInt
  createdAt            DateTime           @default(now())
  updatedAt            DateTime           @default(now()) @updatedAt
  orderItemVariation   OrderItemVariation @relation(fields: [orderItemVariationId], references: [id], onDelete: Cascade)
  variationItem        VariationItem      @relation(fields: [variationItemId], references: [id], onDelete: Cascade)
}

model Offer {
  id           BigInt        @id @default(autoincrement())
  uuid         String        @unique @default(uuid())
  offerType    OfferType
  discountType DiscountType?
  offerValue   Int
  startDate    DateTime?
  endDate      DateTime?
  startTime    String?       @db.VarChar
  endTime      String?       @db.VarChar
  weekdays     Weekday[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @default(now()) @updatedAt
  menuId       BigInt
  productId    BigInt?       @unique
  menu         Menu          @relation(fields: [menuId], references: [id])
  product      Product?      @relation(fields: [productId], references: [id])
  offerItems   OfferItem[]
  orderItems   OrderItem[]
}

model OfferItem {
  id            BigInt    @id @default(autoincrement())
  uuid          String    @unique @default(uuid())
  name          String    @db.VarChar
  offerId       BigInt
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @default(now()) @updatedAt
  maxSelections Int       @default(1)
  offer         Offer     @relation(fields: [offerId], references: [id], onDelete: Cascade)
  products      Product[] @relation("OfferItemToProduct")
}

model Product {
  id                  BigInt               @id @default(autoincrement())
  uuid                String               @unique @default(uuid())
  name                String
  price               Int
  categoryId          BigInt
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @default(now()) @updatedAt
  type                ProductType          @default(FOOD)
  shortcut            Int?
  offer               Offer?
  orderItems          OrderItem[]
  category            Category             @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  productToVariations ProductToVariation[]
  offerItems          OfferItem[]          @relation("OfferItemToProduct")
  printRules          PrintRule[]          @relation("PrintRuleToProduct")
}

model ProductToVariation {
  id          BigInt    @id @default(autoincrement())
  productId   BigInt
  variationId BigInt
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @default(now()) @updatedAt
  product     Product   @relation(fields: [productId], references: [id], onDelete: Cascade)
  variation   Variation @relation(fields: [variationId], references: [id], onDelete: Cascade)
}

model Variation {
  id                  BigInt               @id @default(autoincrement())
  uuid                String               @unique @default(uuid())
  name                String
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @default(now()) @updatedAt
  menuId              BigInt
  productToVariations ProductToVariation[]
  menu                Menu                 @relation(fields: [menuId], references: [id], onDelete: Cascade)
  variationItems      VariationItem[]
}

model VariationItem {
  id                                 BigInt                              @id @default(autoincrement())
  uuid                               String                              @unique @default(uuid())
  name                               String
  additionalCost                     Int
  variationId                        BigInt
  createdAt                          DateTime                            @default(now())
  updatedAt                          DateTime                            @default(now()) @updatedAt
  orderItemVariationToVariationItems OrderItemVariationToVariationItem[]
  variation                          Variation                           @relation(fields: [variationId], references: [id])
}

model Category {
  id         BigInt      @id @default(autoincrement())
  uuid       String      @unique @default(uuid())
  name       String
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @default(now()) @updatedAt
  menuId     BigInt
  menu       Menu        @relation(fields: [menuId], references: [id], onDelete: Cascade)
  products   Product[]
  printRules PrintRule[] @relation("CategoryToPrintRule")
}

model Reservation {
  id             BigInt   @id @default(autoincrement())
  uuid           String   @unique @default(uuid())
  tableId        BigInt
  name           String   @db.VarChar
  phoneNumber    String?  @db.VarChar
  email          String?  @db.VarChar
  numberOfPeople Int
  checkedIn      Boolean  @default(false)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @default(now()) @updatedAt
  date           DateTime
  table          Table    @relation(fields: [tableId], references: [id], onDelete: Cascade)
}

model OpeningTime {
  id           BigInt     @id @default(autoincrement())
  uuid         String     @unique @default(uuid())
  restaurantId BigInt
  weekday      Weekday
  durchgehend  Boolean    @default(true)
  pause        Boolean    @default(false)
  startTime1   String     @db.VarChar
  endTime1     String     @db.VarChar
  startTime2   String?    @db.VarChar
  endTime2     String?    @db.VarChar
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @default(now()) @updatedAt
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)

  @@unique([restaurantId, weekday])
}

model SpecialOpeningTime {
  id           BigInt     @id @default(autoincrement())
  uuid         String     @unique @default(uuid())
  restaurantId BigInt
  reason       String     @db.VarChar
  from         String     @db.VarChar
  to           String     @db.VarChar
  durchgehend  Boolean    @default(true)
  pause        Boolean    @default(false)
  geschlossen  Boolean    @default(false)
  startTime1   String?    @db.VarChar
  endTime1     String?    @db.VarChar
  startTime2   String?    @db.VarChar
  endTime2     String?    @db.VarChar
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @default(now()) @updatedAt
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
}

enum UserRole {
  OWNER
  ADMIN
  USER
}

enum ProductType {
  DRINK
  FOOD
  SPECIAL
  MENU
}

enum PrintRuleType {
  BILLS
  PRODUCT_TYPE
  CATEGORIES
  PRODUCTS
}

enum OrderItemType {
  PRODUCT
  MENU
  SPECIAL
  DIVERSE_FOOD
  DIVERSE_DRINK
  DIVERSE_OTHER
}

enum OfferType {
  FIXED_PRICE
  DISCOUNT
}

enum DiscountType {
  PERCENTAGE
  AMOUNT
}

enum PaymentMethod {
  CASH
  CARD
}

enum Country {
  DE
}

enum Weekday {
  MONDAY
  TUESDAY
  WEDNESDAY
  THURSDAY
  FRIDAY
  SATURDAY
  SUNDAY
}
